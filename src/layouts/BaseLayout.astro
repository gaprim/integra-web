---
const {
  title = "INTEGRA",
  description = "Seguridad, Higiene y Medio Ambiente para PyMEs e instituciones del AMBA.",
  canonical,
} = Astro.props;
const siteTitle = typeof title === "string" ? title : "INTEGRA";
const url = canonical ?? new URL(Astro.url.pathname, Astro.site);
import "../styles/style.css";
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="img/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
   <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@500;700&family=DM+Sans:wght@400;500&display=swap" rel="stylesheet">
    <title>{siteTitle}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={url} />
    <!-- Bootstrap CDN -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <meta property="og:title" content={siteTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={String(url)} />
    <meta property="og:image" content="/img/og-cover.jpg" />
    <script
      type="application/ld+json"
      set:html={JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Organization",
        name: "INTEGRA",
        url: "https://www.integra.com.ar",
        areaServed: "CABA y GBA",
        email: "contacto@integra.com.ar",
        telephone: "+541167416241",
      })}
    />
    <!-- SEO bÃ¡sico -->
<meta name="author" content="INTEGRA Consultora">
<meta property="og:site_name" content="INTEGRA">
<meta property="og:locale" content="es_AR">
<meta property="og:image" content="/img/og-cover.svg" />

<!-- Datos estructurados -->
<script type="application/ld+json" set:html={JSON.stringify({
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "INTEGRA",
  "url": "https://www.integra.com.ar",
  "logo": "/img/favicon.svg",
  "email": "contacto@integra.com.ar",
  "telephone": "+541167416241",
  "areaServed": "CABA y GBA",
  "address": {
    "@type": "PostalAddress",
    "addressLocality": "Buenos Aires",
    "addressCountry": "Argentina"
  }
})}/>
  </head>
  <body>
    <slot />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    ></script>
    <script type="module" src="js/main.js"></script>
  </body>
</html>
