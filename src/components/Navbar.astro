---
const links = [
  { href: "/#inicio", label: "Inicio" },
  { href: "/#servicios", label: "Servicios" },
  { href: "/#metodologia", label: "Metodología" },
  { href: "/#sectores", label: "Sectores" },
  { href: "/#nosotros", label: "Nosotros" },
  { href: "/#resultados", label: "Resultados" },
  { href: "/#contacto", label: "Contacto" }
];
---

<nav class="navbar navbar-expand-lg navbar-elevated sticky-top">
  <div class="container">
    <!-- Marca con mayor presencia -->
    <a class="navbar-brand d-flex align-items-center" href="/#inicio">
      <img src="img/logo-integra.svg" alt="INTEGRA Consultora" class="logo-integra me-2" loading="eager" />
    </a>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#nav">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div id="nav" class="collapse navbar-collapse">
      <ul class="navbar-nav ms-auto align-items-lg-center">
        {links.map(link => (
          <li class="nav-item">
            <a class="nav-link" href={link.href}>{link.label}</a>
          </li>
        ))}
        <li class="nav-item ms-lg-3">
          <a href="/#contacto" class="btn btn-primary btn-sm">Solicitar diagnóstico</a>
        </li>
      </ul>
    </div>
  </div>
</nav>